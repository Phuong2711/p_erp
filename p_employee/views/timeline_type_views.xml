<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="timeline_type_view_tree" model="ir.ui.view">
            <field name="name">timeline.type.view.tree</field>
            <field name="model">p.timeline.type</field>
            <field name="arch" type="xml">
                <tree string="Timeline type" editable="top">
                    <field name="name"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

        <record id="timeline_type_action" model="ir.actions.act_window">
            <field name="name">Timeline Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">p.timeline.type</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>